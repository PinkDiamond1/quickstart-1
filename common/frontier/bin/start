#! /bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

while ! psql -U digitalbits -c 'select 1' frontier &> /dev/null ; do
  echo "Waiting for postgres to be available..."
  sleep 1
done

while ! digitalbits-core --conf /opt/digitalbits/core/etc/digitalbits-core.cfg -c info &> /dev/null ; do
  echo "Waiting for digitalbits-core to be available..."
  sleep 1
done

echo "starting frontier..."
set -e
exec $DIR/frontier
